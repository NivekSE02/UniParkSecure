@{
	ViewData["Title"] = "Dashboard Admin"; var historial = ViewBag.Historial as List<dynamic>; var usuario = Context.Request.Query["usuario"]; var fecha = Context.Request.Query["fecha"]; var hora = Context.Request.Query["hora"];
}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<title>@ViewData["Title"]</title>
	<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
	<style>
		body {
			font-family: 'Inter','Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			background: #f8f9fa;
			color: #333;
			margin: 0;
		}

		.dashboard-wrapper {
			max-width: 1000px;
			margin: 0 auto;
			padding: 80px 20px 40px 20px;
		}
		/* Barra navegación */

		.nav-tabs {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 1rem 2rem;
			background: #fff;
			border-bottom: 1px solid #e5e7eb;
			position: relative;
		}

		.nav-links {
			display: flex;
			gap: 60px;
			flex-wrap: wrap;
		}

		.nav-links {
			display: flex;
			gap: 60px;
		}

		.nav-tabs a {
			text-decoration: none;
			color: #555;
			font-family: 'Montserrat',sans-serif;
			font-weight: 600;
			font-size: 1.05rem;
			transition: .3s;
			padding: .5rem 1rem;
			border-radius: 4px;
		}

			.nav-tabs a:hover {
				color: #1bb0ce;
				background: #f3f4f6;
			}

			.nav-tabs a.active {
				color: #1bb0ce;
				background: #e6f3f8;
			}

		.user-profile {
			position: absolute;
			top: 50%;
			right: 2rem;
			transform: translateY(-50%);
		}

		.user-button {
			display: flex;
			align-items: center;
			gap: 0.5rem;
			padding: 0.5rem 1rem;
			background: #f3f4f6;
			border: 1px solid #e5e7eb;
			border-radius: 4px;
			cursor: pointer;
		}

			.user-button:hover {
				background: #e6f3f8;
				color: #1bb0ce;
			}

		.dropdown-menu {
			display: none;
			position: absolute;
			top: 100%;
			right: 0;
			background: #fff;
			border: 1px solid #e5e7eb;
			border-radius: 4px;
		}

			.dropdown-menu.show {
				display: block;
			}

		.dropdown-item {
			display: block;
			padding: .55rem 1rem;
			font-family: 'Montserrat',sans-serif;
			font-weight: 600;
			color: #4b5563;
			text-decoration: none;
		}

			.dropdown-item:hover {
				background: #e6f3f8;
				color: #1bb0ce;
			}
		/* Contenido */

		h1 {
			font-size: 1.9rem;
			margin: 0 0 30px;
			font-weight: 700;
			text-align: center;
		}

		.filters-card {
			background: #fff;
			border: 1px solid #e2e8f0;
			border-radius: 30px;
			padding: 34px 32px 42px;
			box-shadow: 0 22px 42px -14px rgba(0,0,0,.08),0 4px 10px -2px rgba(0,0,0,.05);
		}

		.filter-form {
			display: flex;
			flex-wrap: wrap;
			gap: 14px;
			justify-content: center;
			margin: 0 0 24px;
		}

			.filter-form input {
				background: #f1f5f9;
				border: 1px solid #d9e2ec;
				padding: 10px 14px;
				font-size: .9rem;
				border-radius: 10px;
				min-width: 180px;
				outline: none;
				transition: .2s;
			}

				.filter-form input:focus {
					border-color: #1bb0ce;
					background: #eef9fc;
				}

			.filter-form button {
				background: #1bb0ce;
				color: #fff;
				font-weight: 600;
				border: none;
				padding: 10px 24px;
				border-radius: 12px;
				cursor: pointer;
				font-size: .9rem;
				letter-spacing: .4px;
				box-shadow: 0 4px 10px -2px rgba(27,176,206,.35);
				transition: .25s;
			}

				.filter-form button:hover {
					filter: brightness(1.08);
				}

		.table-container {
			display: flex;
			justify-content: center;
			width: 100%;
		}

		.table-wrapper {
			display: inline-block;
			overflow-x: auto;
			border: 1px solid #e2e8f0;
			border-radius: 22px;
			background: #fff;
			text-align: left;
		}

		table {
			border-collapse: separate;
			border-spacing: 0;
			font-size: .86rem;
		}

		thead th {
			background: #f1f5f9;
			font-weight: 600;
			text-align: left;
			padding: 14px 18px;
			color: #374151;
			position: sticky;
			top: 0;
			z-index: 2;
		}

		tbody td {
			padding: 12px 18px;
			border-top: 1px solid #eef2f6;
			color: #485968;
			white-space: nowrap;
		}

		tbody tr:first-child td {
			border-top: none;
		}

		tbody tr:hover {
			background: #f8fafc;
		}

		tbody tr:nth-child(even) {
			background: #fcfdff;
		}

		.empty-row {
			text-align: center;
			padding: 40px 12px;
			color: #94a3b8;
			font-weight: 500;
		}

		.badge-sector {
			display: inline-block;
			padding: .35rem .7rem;
			background: #eef6ff;
			color: #1d4ed8;
			border-radius: 999px;
			font-size: .65rem;
			font-weight: 600;
			letter-spacing: .5px;
		}

		.time {
			font-variant-numeric: tabular-nums;
			font-weight: 500;
			color: #1f2937;
		}
	</style>
</head>
<body>
	<div class="dashboard-wrapper"> <div class="nav-tabs"> <div class="nav-links"> <a href="@Url.Action("DashboardAdmin", "Home")" class="active">Historial</a> <a href="@Url.Action("DashboardEntrada", "Home")">Entrada</a> <a href="@Url.Action("DashboardSalida", "Home")">Salida</a> <a href="@Url.Action("DashboardParqueos", "Home")">Parqueos</a> </div> <div class="user-profile"> <button class="user-button" id="userBtn"> <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /> </svg> <span>@(ViewBag.UserName ?? "Usuario")</span> </button> <div class="dropdown-menu" id="dropdownMenu"> <a href="/Home/Login" class="dropdown-item">Cerrar sesión</a> </div> </div> </div> <h1>Historial de Accesos</h1> <section class="filters-card"> <form class="filter-form" method="get" asp-action="DashboardAdmin"> <input type="text" name="usuario" placeholder="Usuario / Email" value="@usuario" /> <input type="date" name="fecha" value="@fecha" /> <input type="time" name="hora" value="@hora" /> <button type="submit">Filtrar</button> </form> <div class="table-container"> <div class="table-wrapper"> <table> <thead> <tr> <th>Nombre</th> <th>DUI</th> <th>Placa</th> <th>Sector</th> <th>Hora Entrada</th> <th>Hora Salida</th> </tr> </thead> <tbody> @if (historial != null && historial.Count > 0) { foreach (var item in historial) {
	<tr> <td>@item.Nombre</td> <td>@item.DUI</td> <td>@item.Placa</td> <td><span class="badge-sector">@item.SectorNombre</span></td> <td class="time">@item.HoraEntrada</td> <td class="time">@item.HoraSalida</td> </tr>
		} } else
	{

		<tr><td colspan="6" class="empty-row">No hay registros disponibles.</td></tr>
	}
 </tbody> </table> </div> </div> </section> </div>
	<script> document.addEventListener('DOMContentLoaded', () => { const userBtn = document.getElementById('userBtn'); const dropdownMenu = document.getElementById('dropdownMenu'); if (userBtn && dropdownMenu) { userBtn.addEventListener('click', e => { e.preventDefault(); dropdownMenu.classList.toggle('show'); }); document.addEventListener('click', e => { if (!userBtn.contains(e.target) && !dropdownMenu.contains(e.target)) { dropdownMenu.classList.remove('show'); } }); } }); </script>
</body>
</html>