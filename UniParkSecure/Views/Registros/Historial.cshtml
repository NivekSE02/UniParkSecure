@model IEnumerable<UniParkSecure.Models.Registro>

@{
    ViewData["Title"] = "Mi Historial";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">

    <!-- Barra de navegación -->
    <div class="bg-white shadow mb-6">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex space-x-8">
    <a href="@Url.Action("DashboardUsuario","Home")" class="text-gray-700 hover:text-blue-600">Perfil</a>
    <a href="@Url.Action("DashboardParqueosUsuario","Home")" class="text-gray-700 hover:text-blue-600">Parqueos</a>
    <a href="@Url.Action("Historial","Registros")" class="text-blue-600 font-semibold">Mi Historial</a>
</div>

                <div>
                    <form asp-action="Logout" asp-controller="Account" method="post" class="inline">
                        <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600">
                            Cerrar sesión
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido -->
    <div class="max-w-5xl mx-auto bg-white shadow rounded p-6">
        <h2 class="text-2xl font-bold mb-4 text-gray-700">📜 Mi Historial de Entradas y Salidas</h2>

        <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-200 rounded-lg overflow-hidden">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left text-gray-700">Fecha Entrada</th>
                        <th class="px-4 py-2 text-left text-gray-700">Fecha Salida</th>
                        <th class="px-4 py-2 text-left text-gray-700">Placa</th>
                        <th class="px-4 py-2 text-left text-gray-700">Sector</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="border-t hover:bg-gray-50">
                                <td class="px-4 py-2">@item.FechaEntrada.ToString("g")</td>
                                <td class="px-4 py-2">@item.FechaSalida?.ToString("g") ?? "-"</td>
                                <td class="px-4 py-2">@item.Placa</td>
                                <td class="px-4 py-2">@item.SectorId</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-gray-500 py-4">No tienes registros todavía.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
